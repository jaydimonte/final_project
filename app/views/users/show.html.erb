<div class="container col-md-offset-2">
    
    <!--USER INFO-->
    
    <div class="row">
    <div class="col-md-8">
    <div class="jumbotron">
      <h3>
        <%= @user.username %>
      </h3>
      <li> Name: <%= @user.name %> </li>
      <li> Birthday: <%= @user.birthday %> </li>
      <li> Email: <%= @user.email %> </li>

    </div>
    </div>
    </div> 
     <!--ADD A THING ROW  -->
      
      
    <div class="row">
        <div class="col-sm-2">
          <a href="/addresses/new" class="btn btn-success">New Address</a>
        </div>
        <div class="col-sm-2">
          <a href="/cycles/new" class="btn btn-success">New Cycle</a>
        </div>
        <div class="col-sm-2">
          <a href="/orders/new" class="btn btn-success">New Order</a>
        </div>
        <div class="col-sm-2">
          <a href="/shipments/new" class="btn btn-success">New Shipment</a>
        </div>
     </div>
     
     
     <!--CURRENT CYCLE AND NEXT CYCLE ROW-->
   
    <div class="row">
        <div class="col-sm-4">
        <h2>Current Cycle</h2>
                <li>Cycle ID <%= @currentcycle.id %></li>
                <li><%= @currentcycle.start_date  %></li>
                <li><%= @currentcycle.end_date %></li>
        </div>
        
        <div class="col-sm-4">
        <h2>Next Cycle</h2>
              <form action="/create_cycle" method="post">
              <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        
              <!-- Label and input for start_date -->
              <div class="form-group">
                <label for="start_date" class="control-label">
                  Start date
                </label>
        
                <input type="text" id="start_date" name="start_date" placeholder="<%= @nextcyclestart %>" class="form-control" value="<%= @cycle.start_date %>">
              </div>
        
              <!-- Label and input for end_date -->
              <div class="form-group">
                <label for="end_date" class="control-label">
                  End date
                </label>
        
                <input type="text" id="end_date" name="end_date" placeholder="<%= @nextcycleend %>" class="form-control" value="<%= @cycle.end_date %>">
              </div>
        
              <!-- Label and input for user_id -->
              <div class="form-group">
               
                <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
              </div>
        
              <button class="btn btn-success">
                Create Cycle
              </button>
              or
              <a href="/cycles">Cancel</a>
            </form>
        </div>            
            
        </div>
    </div>
    
    <!--ALL HISTORY-->
    
    <div class="row">
        <div class="col-sm-8">
            
            <h1>History</h1>

        </div>



  
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Actions</th>
      </tr>

      <% @addresses.each do |address| %>
      <% if address.user_id == current_user.id %>
      <tr>
        <td><%= address.address %></td>
        <td>
          <a href="/addresses/<%= address.id %>" class="btn btn-primary">Show</a>
          <a href="/addresses/<%= address.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
      </tr>
      <% end %> 
      <% end %>
    </table>
    
    <table class="table table-striped table-hover col-md-8">
      <tr>
        <th>Order ID</th>
        <th>Super</th>
        <th>Medium</th>
        <th>Lite</th>
        <th>Actions</th>
      </tr>

      <% @orders.each do |order| %>
      <% if order.user_id == current_user.id %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.super %></td>
        <td><%= order.medium %></td>
        <td><%= order.lite %></td>

        <td>
          <a href="/orders/<%= order.id %>" class="btn btn-primary">Show</a>
          <a href="/orders/<%= order.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
      </tr>
      <% end %> 
      <% end %>
    </table>


    <table class="table table-striped table-hover col-md-8">
      <tr>
        <th>Cycle ID</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Length</th>
        <th>Next Start Date</th>
      </tr>

      <% @cycles.each do |cycle| %>
      <% if cycle.user_id == current_user.id %>
      <tr>
        <td><%= cycle.id %></td>
        <td><%= cycle.start_date %></td>
        <td><%= cycle.end_date %></td>
        <td>
          <a href="/cycles/<%= cycle.id %>" class="btn btn-primary">Show</a>
          <a href="/cycles/<%= cycle.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
      </tr>
      <% end %> 
      <% end %>
    </table>

  
</div>

</div>